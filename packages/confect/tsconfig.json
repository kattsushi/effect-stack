{
  "compilerOptions": {
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ],
    "jsx": "preserve",
    "importsNotUsedAsValues": "remove",
    "exactOptionalPropertyTypes": false,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "module": "ESNext"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "coverage",
    "dist",
    "docs",
    "example",
    "node_modules",
    "test/convex"
  ]
}
