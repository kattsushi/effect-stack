{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/**/*"
  ],
  "scripts": {
    "prepare": "husky",
    "check": "biome check --write .",
    "dev": "nx run-many -t dev",
    "build": "nx run-many -t build",
    "check-types": "nx run-many -t check-types",
    "dev:native": "nx dev native",
    "dev:web": "nx dev web",
    "dev:server": "nx dev @monorepo/backend",
    "dev:setup": "nx dev:setup @monorepo/backend",
    "clean": "rm -rf node_modules dist pnpm-lock.yaml && pnpm store prune & find . -type d \\( -name 'node_modules' -o -name 'dist' -o -name '.output' -o -name '.vinxi' -o -name '.cache' -o -name '.expo' -o -name '.nx' \\) -prune -exec rm -rf {} + & wait",
    "lint-staged": "lint-staged --allow-empty"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@nx/js": "21.4.1",
    "@nx/vite": "21.4.1",
    "@nx/web": "21.4.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "20.19.0",
    "@vitejs/plugin-react-swc": "catalog:",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "husky": "9.1.7",
    "jsdom": "~22.1.0",
    "lint-staged": "16.1.2",
    "nx": "21.4.1",
    "typescript": "catalog:",
    "ultracite": "5.1.2",
    "vite": "catalog:",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite format"
    ]
  },
  "packageManager": "pnpm@10.14.0"
}
